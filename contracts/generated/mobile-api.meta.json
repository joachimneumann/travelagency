{
  "contract_version": "2026-03-01.3",
  "roles": [
    "atp_admin",
    "atp_manager",
    "atp_accountant",
    "atp_staff"
  ],
  "stages": [
    "NEW",
    "QUALIFIED",
    "PROPOSAL_SENT",
    "NEGOTIATION",
    "INVOICE_SENT",
    "PAYMENT_RECEIVED",
    "WON",
    "LOST",
    "POST_TRIP"
