      "app": {
        "type": "object",
        "required": [
          "min_supported_version",
          "latest_version",
          "force_update"
        ],
        "properties": {
          "min_supported_version": {
            "type": "string"
          },
          "latest_version": {
            "type": "string"
          },
          "force_update": {
            "type": "boolean"
          }
        }
      },
      "api": {
        "type": "object",
        "required": [
          "contract_version"
        ],
        "properties": {
          "contract_version": {
            "type": "string"
          }
        }
      },
      "features": {
        "$ref": "#/components/schemas/MobileBootstrapFeatures"
      }
    }
  }
